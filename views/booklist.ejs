<h1>Search Result</h1>
<hr>
<div class="d-flex flex-wrap justify-content-left">
  <% for (var i=0; i<titleRes.length; i++) { %>
    <% if (!isbnRes[i].startsWith('U')) { %>
    <div class="m-3 card" style="width: 15rem;">
      <img src="<%= imageRes[i] %>" style="padding:10px" class="card-img-top" alt="<%= titleRes[i] %>">
      <div class="card-body">
        <h4>
          <%= titleRes[i] %>
        </h4>
        <% if (authorRes[i]) { %>
        <% for (var j=0; j<authorRes[i].length; j++) { %>
          
          <h5 class="card-title">
            <%= authorRes[i][j] %>
          </h5>
          <% } %>
          <% } %>
          <% if (descriptionRes[i]) { %>

            <p class="card-text" style="font-size:15px">
              <%= descriptionRes[i].substring(0, 150) %>...
            </p>
           
           <% } %>
           
            <a href="/books/show/<%= isbnRes[i] %>">Read More>></a>
            <form method="post" action="/wishlist/add">
              <input type="text" value="<%= isbnRes[i] %>" name="isbnRes" style="visibility:hidden"><br>
              <button class="mt-3 btn btn-danger" type="submit" style="position:absolute;top:2px;right:15px;font-size:20px">+</button>
            </form>
            <% } %>  
      </div>
    </div>
    <% } %>
</div>